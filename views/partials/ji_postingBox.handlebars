    <div class="card gedf-card">


                <div class="card-body py-2">
                    <div class="d-flex">
                        <div>
                            {{#each profilepic}}
                            <img class="rounded-circle" width="50" src="{{{profilepic}}}">
                            {{/each}}
                        </div>
                        <div class="col">
                            <form action="">
                                <div class="form-group mb-0">
                                    <label class="sr-only" for="exampleFormControlTextarea1">Example textarea</label>
                                    <textarea class="form-control border-0 textValue" id="exampleFormControlTextarea1"
                                        rows="2" placeholder="Do you want to share your story?"></textarea>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <div class="d-flex justify-content-between align-items-center">

                        <div class="col">
                            <button type="button" class="btn btn-fposts btn-block btn-sm" data-toggle="modal"
                                data-target="#uploadImg"><i class="far fa-image" aria-hidden="true"></i>
                                image/video</button>
                        </div>

                        <div class="col">
                            <button type="button" class="btn btn-fposts btn-block btn-sm" id="post">Post</button>
                        </div>
                    </div>
                </div>



            </div>

            <div class="modal fade" id="uploadImg" role="dialog">
                <div class="modal-dialog">

                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <form action="/upload" method="POST" enctype="multipart/form-data">
                                <span>File</span>
                                <input name="myImage" type="file">
                                <br>
                                comment: <input type="text" name="comment">
                                <br>
                                <button type="submit" class="btn">SUBMIT</button>
                                <br>
                            </form>
                        </div>
                    </div>

                </div>
            </div>